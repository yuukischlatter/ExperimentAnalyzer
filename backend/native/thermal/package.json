{
  "name": "@backend/thermal-native",
  "version": "1.0.0",
  "description": "Native thermal analysis engine for Schlatter Experiment Analyzer - High-performance welding thermal video analysis",
  "main": "build/Release/thermal_engine.node",
  "scripts": {
    "build": "node-gyp rebuild",
    "build-debug": "node-gyp rebuild --debug",
    "build-verbose": "node-gyp rebuild --verbose",
    "clean": "node-gyp clean",
    "configure": "node-gyp configure",
    "test": "node test/test_thermal.js",
    "install": "npm run build",
    "rebuild": "npm run clean && npm run build"
  },
  "keywords": [
    "thermal",
    "opencv",
    "video-analysis",
    "native-addon",
    "welding",
    "data-analysis",
    "schlatter",
    "industrial",
    "cpp",
    "temperature",
    "performance",
    "avi"
  ],
  "author": "Schlatter Industries",
  "license": "ISC",
  "dependencies": {
    "node-addon-api": "^8.5.0"
  },
  "devDependencies": {
    "node-gyp": "^10.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "win32"
  ],
  "cpu": [
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "local"
  },
  "gypfile": true,
  "binary": {
    "module_name": "thermal_engine",
    "module_path": "./build/Release/",
    "host": "local"
  },
  "buildDependencies": {
    "opencv": {
      "version": "4.10.0",
      "path": "C:/opencv/build",
      "libraries": [
        "opencv_world4100",
        "opencv_world4100d"
      ],
      "dlls": [
        "opencv_world4100.dll",
        "opencv_world4100d.dll"
      ]
    }
  },
  "config": {
    "target_platform": "win32",
    "target_arch": "x64",
    "cache_min": "10.3.0",
    "module_name": "thermal_engine",
    "module_path": "./build/Release"
  },
  "files": [
    "binding.gyp",
    "src/",
    "data/",
    "build/Release/*.node",
    "build/Release/*.dll"
  ]
}