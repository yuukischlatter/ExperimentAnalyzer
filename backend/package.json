{
  "name": "experiment-analyzer-backend",
  "version": "1.0.0",
  "description": "Node.js backend for Schlatter Experiment Analyzer - Welding Data Analysis System with HDF5 Support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "init-db": "node -e \"require('./database/connection.js').initializeDatabase()\"",
    "scan": "node -e \"require('./services/StartupService.js').runScan()\"",
    "build-native": "cd native/hdf5 && npm install && npm run build",
    "build-native-debug": "cd native/hdf5 && npm install && npm run build-debug",
    "clean-native": "cd native/hdf5 && npm run clean",
    "rebuild-native": "cd native/hdf5 && npm run rebuild",
    "setup": "npm install && npm run build-native",
    "dev-with-native": "npm run build-native && npm run dev",
    "postinstall": "npm run build-native || echo \"Warning: Native addon build failed, will use fallback\""
  },
  "keywords": [
    "welding",
    "data-analysis",
    "experiments",
    "schlatter",
    "industrial",
    "hdf5",
    "tpc5",
    "oscilloscope",
    "time-series",
    "native-addon",
    "performance"
  ],
  "author": "Schlatter Industries",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "h5wasm": "^0.8.3",
    "papaparse": "^5.4.1",
    "sqlite3": "^5.1.6",
    "xlsx": "^0.18.5",
    "node-addon-api": "^8.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "node-gyp": "^10.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "win32",
    "linux",
    "darwin"
  ],
  "cpu": [
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "local"
  },
  "config": {
    "hdf5_native_required": false,
    "hdf5_fallback_enabled": true,
    "native_addon_path": "./native/hdf5/build/Release/hdf5_native.node"
  },
  "optionalDependencies": {
    "@backend/hdf5-native": "file:./native/hdf5"
  },
  "buildSettings": {
    "nativeModules": {
      "hdf5": {
        "path": "./native/hdf5",
        "required": false,
        "fallback": "h5wasm"
      }
    },
    "platforms": {
      "win32": {
        "vcpkg": true,
        "buildTools": "Visual Studio Build Tools"
      },
      "linux": {
        "packages": ["libhdf5-dev", "build-essential"]
      }
    }
  }
}